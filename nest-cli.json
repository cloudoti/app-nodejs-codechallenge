{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/yape-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/yape-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/yape-gateway",
  "projects": {
    "yape-gateway": {
      "type": "application",
      "root": "apps/yape-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/yape-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/yape-gateway/tsconfig.app.json"
      }
    },
    "yape-auth": {
      "type": "application",
      "root": "apps/yape-auth",
      "entryFile": "main",
      "sourceRoot": "apps/yape-auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/yape-auth/tsconfig.app.json"
      }
    },
    "yape-domain": {
      "type": "library",
      "root": "libs/yape-domain",
      "entryFile": "index",
      "sourceRoot": "libs/yape-domain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/yape-domain/tsconfig.lib.json"
      }
    },
    "yape-transaction": {
      "type": "application",
      "root": "apps/yape-transaction",
      "entryFile": "main",
      "sourceRoot": "apps/yape-transaction/src",
      "compilerOptions": {
        "tsConfigPath": "apps/yape-transaction/tsconfig.app.json"
      }
    },
    "yape-anti-fraud": {
      "type": "application",
      "root": "apps/yape-anti-fraud",
      "entryFile": "main",
      "sourceRoot": "apps/yape-anti-fraud/src",
      "compilerOptions": {
        "tsConfigPath": "apps/yape-anti-fraud/tsconfig.app.json"
      }
    }
  }
}
